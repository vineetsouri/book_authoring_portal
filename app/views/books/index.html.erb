<h1>Books Index</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.caption %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <tr><%= link_to 'New', new_book_path %></tr>
  </tbody>
</table>