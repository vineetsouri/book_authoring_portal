<%= link_to "Delete", book_path(@book), method: :delete, class: "btn btn-danger pull-right", data: {confirm: "Are you sure you want to delete the book?"} %>
<%= link_to "Edit", edit_book_path(@book), class: "btn btn-primary pull-right" %>
<%= link_to "Add Chapter", new_book_chapter_path(@book), class: "btn btn-primary pull-right" %>

<h1><%= @book.title %></h1>
<p><%= @book.caption %></p>
<table class="table table-striped table-hover">
  <% @book.chapters.each do |chapter| %>
  <tr>
    <td>
      <%= link_to chapter.title, book_chapter_path(@book,chapter) %>
    </td>
  </tr>
  <% end %>
</table>
